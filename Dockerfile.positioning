FROM python:3.8-slim

ENV PYTHONDONTWRITEBYTECODE=1

ENV PYTHONUNBUFFERED=1

COPY requirements.txt .
RUN python -m pip install -r requirements.txt

COPY positioning /positioning
COPY config.ini /positioning/

RUN adduser -u 5678 --disabled-password --gecos "" appuser && chown -R appuser /positioning
USER appuser

WORKDIR /positioning
CMD ["python", "positioning.py", "config.ini"]
